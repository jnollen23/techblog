<div class="container">
    <form id="createPost">
        <div class="row d-flex justify-content-center">
            <div class="col-10">
                <div>
                    <h2>Enter Title</h2>
                </div>
                <input type="text" class='w-100' id="titleInput" placeholder="Enter Title" value="{{title}}">
            </div>
        </div>
        <br />
        <div class="row d-flex justify-content-center">
            <div class="col-10 ">
                <div>
                    <h2>Enter Content</h2>
                </div>
                <input type="text" class="w-100 pb-5" id="contentInput" placeholder="Enter the post contents here..."
                    value="{{content}}">
            </div>
        </div>
        <br />
        <div class="row d-flex justify-content-center">
            <div class="col d-flex justify-content-center">
                {{#if update}}
                <button class="btn btn-lg btn-success px-3" type="submit" data-type="update" data-id='{{id}}'
                    id="action">Update</button>
                {{else}}
                <button class="btn btn-lg btn-success px-3" type="submit" data-type="create" id="action">Create</button>
                {{/if}}
            </div>
        </div>
    </form>
    <div class='row d-flex justify-content-center'>
        <div class="col-1">
            <button class="btn btn-lg btn-danger" onclick="cancelPost()">Cancel</button>
        </div>
    </div>

    <div id="postError" hidden="true" style="color:red">There was an error creating the post please try again.</div>
    {{#if update}}
    <script src="../../js/createPost.js"></script>
    {{else}}
    <script src="./js/createPost.js"></script>
    {{/if}}
</div>